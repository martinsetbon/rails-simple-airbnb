<div class="container">
  <h1>Add Restaurant</h1>
  <!-- form_with will build the form using the empty instance you give it -->
  <!-- <form action="/restaurants" method="post"></form> -->
  <%= simple_form_for restaurant do |f| %>
  <%= f.input :name, input_html: { placeholder: 'Enter restaurant name' } %>
  <%= f.input :address, wrapper_html: { class: 'form-group' } %>
  <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], prompt: 'Select a category' %>
  <%= f.input :phone_number, input_html: { placeholder: 'Enter phone number' } %>
  <%= f.submit 'Submit', class: 'btn btn-success mt-2' %>
<% end %>

</div>
